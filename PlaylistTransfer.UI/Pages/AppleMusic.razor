@page "/apple-music"
@using PlaylistTransfer.UI.Data
@inject PlaylistState playlistState

<h3>Transfer to Apple Music</h3>

@if (PlaylistState.SelectedPlaylists == null || PlaylistState.SelectedPlaylists.Count == 0)
{
    <p>No playlists selected.</p>
}
else
{
    <ul>
        @foreach (var playlist in PlaylistState.SelectedPlaylists)
        {
            <li>
                <span>@playlist.PlaylistName</span>
            </li>
        }
    </ul>
    <button class="btn btn-primary" @onclick="PostToAppleMusic">Submit</button>
}

@code {
    private Task PostToAppleMusic()
    {
        Console.WriteLine("Posting playlists to Apple Music...");
        return Task.CompletedTask;
    }
}